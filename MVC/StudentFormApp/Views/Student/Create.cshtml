@{
    @model StudentML
}

<h2>Add Student</h2>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" placeholder="Enter your name" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Class">Class</label>
        <input type="text" asp-for="Class" class="form-control" placeholder="Enter your class" />
    </div>

    <div class="mb-3">
        <label asp-for="RollNo">Roll Number</label>
        <input type="number" asp-for="RollNo"  class="form-control" placeholder="Enter your roll no"/>
    </div>

    <div class="mb-3">
        <label asp-for="Email">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email"/>
    </div>

    <div class="mb-3">
        <label asp-for="Address">Address</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="Enter your address"/>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
