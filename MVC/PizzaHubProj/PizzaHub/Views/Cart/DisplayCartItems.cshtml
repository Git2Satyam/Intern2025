@using PizzaHub.Models
@model IEnumerable<ProductModel>
@{
    Layout = "_FullLayout";
}

<div class="card">
    <div class="card-body">
        @if(Model.Count() > 0)
        {
            foreach(var product in Model)
            {
                <div class="row">
                    <div>
                        <img src="@Url.Content(product.ImageUrl)" alt="no image" />
                    </div>
                    <div>
                        <div>
                            @product.ProductName
                        </div>

                        <div>
                            @product.ProductDescription
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
