@using PizzaHub.Models
@model List<CartItemModel>
@{
    Layout = "_FullLayout";
}

<div class="card">
    <div class="card-body">
        <h4 class="border-bottom">Total Item: @Model.Count</h4>
        @if(Model.Count() > 0)
        {
            @foreach(var item in Model)
            {
                @if(item.Products.Count > 0)
                {
                    @foreach (var product in item.Products)
                    {
                        <div class="row mt-5 border-bottom">
                            <div class="col-md-2 col-lg-2">
                                <img src="@Url.Content(product.ImageUrl)" alt="no image" class="img-fluid"/>
                            </div>
                            <div class="col-md-8 col-lg-8">
                                <div class="mb-3">
                                    <strong>@product.ProductName</strong>
                                </div>

                                <div class="mb-3">
                                    <strong>@product.ProductDescription</strong>
                                </div>

                                <div class="input-group mb-3">
                                    <button onclick="updateQuantity('@item.Id', '@item.Quantity', -1)" class="btn btn-outline-secondary" type="button">-</button>
                                    <input type="text" class="form-control" name="quantity" value="@item.Quantity" readonly style="max-width: 50px; text-align: center;">
                                    <button onclick="updateQuantity('@item.Id', '@item.Quantity', 1)" class="btn btn-outline-secondary" type="button">+</button>
                                    
                                </div>

                                <div class="mb-3">
                                    <small>@product.Currency</small>
                                    <strong>@item.UnitPrice</strong>
                                </div>

                                <div class="mb-2">
                                    <button class="btn btn-danger ">
                                        <a href="@Url.Action("DeleteItem", "Cart", new {productId = product.Id})" class="text-decoration-none text-white">Delete</a>
                                    </button>
                                    <span class="ms-3">
                                        <button  class="btn btn-warning">
                                            <a class="text-decoration-none" href=@Url.Action("CheckoutForCart", "Cart", new {productId = product.Id})>Buy</a>
                                        </button>
                                    </span>
                                    
                                </div>
                            </div>
                        </div>
                    }
                   
                }
            }
            <a href=@Url.Action("CheckoutForCart", "Cart", new {productId = 0}) class="btn btn-warning mt-2">Buy All</a>
        }
        else
        {
            <span class="text-center">Not item in your cart.</span>
        }
    </div>
</div>

@if (TempData.Keys.Count > 0)
{
    <partial name="_Notification" />
}
@section Scripts{
    <script src="~/js/Cart.js"></script>
}
