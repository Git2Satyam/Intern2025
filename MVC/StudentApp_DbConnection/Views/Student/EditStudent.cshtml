 @model StudentApp.Models.StudentModel
@{
    <h3>Edit Student Details</h3>
}

<form asp-action="EditStudent" method="post">
    <div>
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div>
        <label asp-for="RollNo">Roll Number</label>
        <input type="number"  asp-for="RollNo" class="form-control" />
    </div>

    <div>
        <label asp-for="Class">Standard</label>
        <input type="text" asp-for="Class" class="form-control" />
    </div>

    <div>
        <label asp-for="Email">Email</label>
        <input type="email" asp-for="Email" class="form-control" />
    </div>

    <div>
        <label asp-for="Address">Address</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>