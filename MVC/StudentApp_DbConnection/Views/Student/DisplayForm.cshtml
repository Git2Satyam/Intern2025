@model StudentApp.Models.StudentModel
@{
    <h3>STUDENT FORM</h3>
    <form asp-action="DisplayForm" method="post">
        <div>
          <label asp-for="Name">Name</label>
          <input type="text" placeholder="Enter your name" asp-for="Name" class="form-control"/>
        </div>

        <div>
            <label asp-for="RollNo">Roll Number</label>
            <input type="number" placeholder="Enter your roll no." asp-for="RollNo" class="form-control" />
        </div>

        <div>
            <label asp-for="Class">Standard</label>
            <input type="text" placeholder="Enter your class" asp-for="Class" class="form-control" />
        </div>

        <div>
            <label asp-for="Email">Email</label>
            <input type="email" placeholder="Enter your email" asp-for="Email" class="form-control" />
        </div>

        <div>
            <label asp-for="Address">Address</label>
            <input type="text" placeholder="Enter your address" asp-for="Address" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </form>
}
