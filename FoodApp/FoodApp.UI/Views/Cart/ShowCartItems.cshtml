@using FoodApp.Models
@model IEnumerable<CartItemModel>

@{
    Layout = "_FullLayout";
}

<div class="card">
    <div class="card-body">
        <span class="border-bottom">Total Item: <small>@Model.Count()</small></span>
        @if(Model.Count() > 0)
        {
            foreach(var item in Model)
            {
                <div class="row">
                    <div class="col-md-2 col-lg-2">
                        <img src="@Url.Content(item.Products.ImageURL)" />
                    </div>

                    <div>

                    </div>
                </div>
            }
        }
        else
        {
            <span class="text-center">Cart is empty.</span>
        }
    </div>
</div>

