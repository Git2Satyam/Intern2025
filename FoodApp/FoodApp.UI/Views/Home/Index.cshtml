@using FoodApp.Models
@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Home Page";

    Layout = "_FullLayout";
    List<string> img = ViewBag.SliderImages;
}


<div style="background: skyblue; height: 30dvh;">
    <div class="pt-lg-4 pb-lg-3 pb-3">
        <div class="row">
            <div class="col-md-3">
                <img class="container-fluid rounded" src="~/Images/Pizza/Pizza_H.jpg" alt="..." style="height: 25dvh; width: 390px;" />
            </div>

            <div class="col-md-4 text-white">
                <h1>Food Delivery Website!</h1>
                <p class="mt-3">Food deliver at your door step!</p>

                <button class=" btn btn-success mt-4" href="#">Order Online now</button>
            </div>

            <div class="col-md-5">
                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        @for (int i = 0; i < img.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@Url.Content(img[i])" class="d-block w-100" alt="..." style="height: 26dvh; width: 400px">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

@if (Model != null)
{
    <div class="row" style="margin-left: 20px; margin-top: 30px">
        @foreach (var product in Model)
        {
           <div class="col-md-3">
                <div class="card mb-3" style="width: 22rem; height: 48dvh">
                    <img class="card-img-top p-1" src="@Url.Content(product.ImageURL)" alt="Card image cap" style="height: 25dvh">
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <small class="text-success">In Stock</small>
                        <span>@product.Quantity</span>
                        <p class="card-text">@product.ProductDescription</p>
                        <h5>@product.Price</h5>
                        <a href="#" class="btn btn-primary">Add to cart</a>
                        <a href="#" class="btn btn-warning float-end">Buy now</a>
                    </div>
                </div>
           </div>
        }
    </div>


}
